@model FrondEnd_ProyectoPA.Models.Chofer

@{
    ViewData["Title"] = "Modificar Chofer -";
}

<div class="w3-container w3-blue  w3-text-black">

    <h4>Mantenimiento Choferes</h4>
    <hr />
    <h1>Modificar Chofer</h1>
</div>
<div class="w3-container w3-light-grey w3-text-black">
    <div class="row">
        <div class="col-md-4">
            <form class="w3-container" asp-action="ModificarChofer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id_Chofer" class="control-label">ID Chofer</label>
                    <input asp-for="Id_Chofer" class="form-control w3-input" />
                    <span asp-validation-for="Id_Chofer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreUsuario" class="control-label">Nombre Usuario</label>
                    <input asp-for="NombreUsuario" class="form-control w3-input" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contrasena" class="control-label">Contraseña</label>
                    <input asp-for="Contrasena" class="form-control w3-input" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CorreoUsuario" class="control-label">Email</label>
                    <input asp-for="CorreoUsuario" class="form-control w3-input" />
                    <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input  type="submit" value="Modificar" class="btn btn-primary w3-input" />
                </div>
            </form>
        </div>
    </div>

    <div class="w3-center w3-container">
        <a class="w3-button w3-green btn btn-secondary" asp-action="Index">Regresar</a>
    </div>

</div>
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
