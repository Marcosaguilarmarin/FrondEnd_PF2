@model IEnumerable<FrondEnd_ProyectoPA.Models.Chofer>

@{
    ViewData["Title"] = "Mantenimiento Choferes - ";
}
<div class="w3-container w3-blue  w3-text-black w3-large">
    <h1>Mantenimiento Choferes</h1>
    <hr />
</div>
<div>
    <form asp-action="Index" asp-controller="Chofer" method="get">
        <div>
            <div class="w3-container w3-blue  w3-text-black w3-large">
                <label> Digite consulta</label>
            </div>
                <input Palceholder="Digite Nombre" type="search" name="buscar" class="input-group w-full norder mt-2" />
                <button class="w3-button w3-green btn btn-secondary" type="submit"> Filtrar</button>
            </div>



</form>
</div>
<div class="w3-container w3-light-grey w3-centered">
    <table class="w3-table w3-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Chofer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contrasena)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CorreoUsuario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Chofer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contrasena)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CorreoUsuario)
                    </td>
                    <td>
                        <a class="w3-button w3-green w3-hover-blue btn-secondary" asp-action="CrearChofer" asp-controller="Chofer">Agregar</a>
                        <a class="w3-button w3-green w3-hover-bluebtn btn-secondary" asp-action="ModificarChofer" asp-controller="Chofer">Modificar</a>
                        <a class="w3-button w3-green w3-hover-blue btn btn-secondary" asp-action="EliminarChofer" asp-controller="Chofer">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
 
    <div class="w3-center w3-container">
        <a class="w3-button w3-green btn btn-secondary" asp-action="Catalogos" asp-controller="Home">Regresar</a>
    </div>
    
</div>

<hr />
