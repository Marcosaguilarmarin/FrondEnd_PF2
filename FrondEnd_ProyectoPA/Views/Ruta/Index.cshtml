@model IEnumerable<FrondEnd_ProyectoPA.Models.Ruta>

@{
    ViewData["Title"] = "Mantenimiento Rutas - ";
}
<div class="w3-container w3-blue  w3-text-black w3-large">
    <h1>Mantenimiento Rutas</h1>
    <hr />
</div>

<div class="w3-container w3-light-grey w3-centered">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Ruta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MontoEstimado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MontoRecibido)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Ruta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MontoEstimado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MontoRecibido)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <div class="w3-center">
        <a class="w3-button w3-green w3-hover-blue w3-centered" asp-action="CrearRuta" asp-controller="Ruta">Agregar Nueva Ruta</a>
    </div>
    <hr />
    <div class="w3-center w3-container">
        <a class="w3-button w3-green btn btn-secondary" asp-action="Catalogos" asp-controller="Home">Regresar</a>
    </div>

</div>

<hr />
