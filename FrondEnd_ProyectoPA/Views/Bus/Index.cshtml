@model IEnumerable<FrondEnd_ProyectoPA.Models.Bus>

@{
    ViewData["Title"] = "Mantenimiento Bus - ";
}

<div class="w3-container w3-blue  w3-text-black w3-large">
    <h1>Mantenimiento Bus</h1>
    <hr />
</div>
<div>
    <form asp-action="Index" asp-controller="Bus" method="get">
        <div>
            <div class="w3-container w3-blue  w3-text-black w3-large">
                <label> Digite consulta</label>
            </div>
            <input Palceholder="Digite Nombre" type="search" name="buscar" class="input-group w-full norder mt-2" />
            <button class="w3-button w3-green btn btn-secondary" type="submit"> Filtrar</button>
        </div>



    </form>
</div>
<div class="w3-container w3-light-grey w3-centered">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Bus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Placa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Ruta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Chofer)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Bus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Ruta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Chofer)
                    </td>
                    <td>
                        <a class="w3-button w3-green w3-hover-blue btn-secondary" asp-action="CrearBus" asp-controller="Bus">Agregar</a>
                        <a class="w3-button w3-green w3-hover-bluebtn btn-secondary" asp-action="ModificarBus" asp-controller="Bus">Modificar</a>
                        <a class="w3-button w3-green w3-hover-blue btn btn-secondary" asp-action="EliminarBus" asp-controller="Bus">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    
    <div class="w3-center w3-container">
        <a class="w3-button w3-green btn btn-secondary" asp-action="Catalogos" asp-controller="Home">Regresar</a>
    </div>
</div>

<hr />

