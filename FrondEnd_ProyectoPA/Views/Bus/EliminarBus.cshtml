            @Html.DisplayNameFor(model => model.Id_Bus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_Bus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Placa)
